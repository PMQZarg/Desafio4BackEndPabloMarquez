{{!--hacer una lista de todos los productos agregados hasta el momento--}}

<h1>Lista Productos</h1>

<table>
    <tr>
        <th>id:</th>
        <th>title:</th>
        <th>description:</th>
        <th>price:</th>
        <th>thumbnail:</th>
        <th>code:</th>
        <th>stock:</th>
        <th>category:</th>
        <th>status:</th>
        <th>quantity:</th>
    </tr>

    {{#each products}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>{{price}}</td>
            <td>${{thumbnail}}</td>
            <td>{{code}}</td>
            <td>{{stock}}</td>
            <td>{{category}}</td>
            <td>{{status}}</td>
            <td>{{quantity}}</td>
        </tr>
    {{/each}}
</table>